task 1

class Animal:
    def speak(self):
        pass

class Dog(Animal):
    def speak(self):
        return "Woof!"

class Cat(Animal):
    def speak(self):
        return "Meow!"

dog = Dog()
cat = Cat()
print(dog.speak())
print(cat.speak())

task 2

class Vehicle:
    def __init__(self, brand, fuel):
        self.brand = brand
        self.fuel = fuel 

    def __str__(self):
        return f"{self.brand} with {self.fuel}L of fuel"


class Car(Vehicle):
    def __init__(self, brand, fuel, doors):
        super().__init__(brand, fuel)
        self.doors = doors

    def drive(self, distance):
        fuel_needed = distance * 0.1  #This is distamce assume it
        if self.fuel >= fuel_needed:
            self.fuel -= fuel_needed
            print(f"Driving {distance} km... Fuel left: {self.fuel:.2f}L")
        else:
            print("Not enough fuel to drive.")

my_car = Car("Toyota", 10, 4)
print(my_car)
my_car.drive(50)
my_car.drive(60)

task 3 

class BankAccount:
    def __init__(self, initial_balance=0):
        self.__balance = initial_balance  # private attribute

    def deposit(self, amount):
        if amount > 0:
            self.__balance += amount
            print(f"Deposited ${amount:.2f}")
        else:
            print("Deposit amount must be positive.")

    def withdraw(self, amount):
        if amount > 0:
            if self.__balance >= amount:
                self.__balance -= amount
                print(f"Withdrew ${amount:.2f}")
            else:
                print("Insufficient funds.")
        else:
            print("Withdrawal amount must be positive.")

    def get_balance(self):
        return self.__balance

# Example usage
account = BankAccount(100)
account.deposit(50)
account.withdraw(30)
print(f"Current balance: ${account.get_balance():.2f}")

task 4

class Person:
    def __init__(self, age):
        self._age = None  # Initialize private attribute
        self.age = age    # Use setter for validation

    @property
    def age(self):
        return self._age

    @age.setter
    def age(self, value):
        if isinstance(value, int) and value > 0:
            self._age = value
        else:
            raise ValueError("Age must be a positive integer.")

# Example usage
try:
    person = Person(25)
    print(f"Person's age: {person.age}")
    person.age = 30
    print(f"Updated age: {person.age}")
    person.age = -5  # This will raise an error
except ValueError as e:
    print(e)

task 5

# InkPrinter class
class InkPrinter:
    def print_document(self):
        print("Printing with ink... Slower but cheaper for color prints.")

# LaserPrinter class
class LaserPrinter:
    def print_document(self):
        print("Printing with laser... Faster and better for high-volume black-and-white prints.")

# Example usage
printers = [InkPrinter(), LaserPrinter()]
for printer in printers:
    printer.print_document()

Activity 2
# Bird class
class Bird:
    def speak(self):
        print("Tweet tweet!")

# Robot class
class Robot:
    def speak(self):
        print("Beep boop. I am a robot.")

# Function that calls speak() if available
def make_it_speak(obj):
    if hasattr(obj, 'speak') and callable(getattr(obj, 'speak')):
        obj.speak()
    else:
        print("This object can't speak.")

# Example usage
bird = Bird()
robot = Robot()
make_it_speak(bird)   # Output: Tweet tweet!
make_it_speak(robot)  # Output: Beep boop.
make_it_speak("hello")  # Output: This object can't speak.

task 2

# Abstract base class
class Shape(ABC):
    @abstractmethod
    def area(self):
        pass

# Circle subclass
class Circle(Shape):
    def __init__(self, radius):
        self.radius = radius

    def area(self):
        return math.pi * self.radius ** 2

# Rectangle subclass
class Rectangle(Shape):
    def __init__(self, width, height):
        self.width = width
        self.height = height

    def area(self):
        return self.width * self.height

# Example usage
shapes = [Circle(5), Rectangle(4, 6)]
for shape in shapes:
    print(f"{type(shape).__name__} area: {shape.area():.2f}")






